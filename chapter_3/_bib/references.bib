  urldate = {2017-01-09},
  date = {2008-12-01},
  pages = {400-412},
  keywords = {yeast,Saccharomyces cerevisiae,chromate,sulfate uptake,sulfur starvation},
  author = {Pereira, Yannick and Lagniel, Gilles and Godat, Emmanuel and Baudouin-Cornu, Peggy and Junot, Christophe and Labarre, Jean},

  date = {1999-06-15},
  pages = {3325-3333},
  keywords = {phytoremediation,metal tolerance,phytochelatins,bioremediation,metal toxicity},
  author = {Clemens, Stephan and Kim, Eugene J. and Neumann, Dieter and Schroeder, Julian I.},
  file = {Full Text PDF:C\:\\Users\\GeorgeSun\\Zotero\\storage\\6AX2SKZJ\\Clemens et al. - 1999 - Tolerance to toxic metals by a gene family of phyt.pdf:application/pdf;Snapshot:C\:\\Users\\GeorgeSun\\Zotero\\storage\\NVW755V3\\3325.html:text/html},

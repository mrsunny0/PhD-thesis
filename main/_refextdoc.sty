\ProvidesPackage{refextdoc}

%===========================================================================%
% use zref-xr: https://tex.stackexchange.com/questions/77774/undefined-control-sequence-when-cross-referencing-with-xr-hyper
\usepackage{nameref,zref-xr}
\zxrsetup{toltxlabel}

% for main document
\zexternaldocument*[ext-]{../main/main}

% for chapters
\zexternaldocument*[ext-]{../chapter_1/chapter_1}
\zexternaldocument*[ext-]{../chapter_2/chapter_2}
\zexternaldocument*[ext-]{../chapter_3/chapter_3}
\zexternaldocument*[ext-]{../chapter_4/chapter_4}
\zexternaldocument*[ext-]{../chapter_5/chapter_5}

% for appendix
\zexternaldocument*[ext-]{../appendix/appendix_A}
\zexternaldocument*[ext-]{../appendix/appendix_B}
\zexternaldocument*[ext-]{../appendix/appendix_C}


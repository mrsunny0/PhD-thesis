  keywords = {Biomineralization,Desulfovibrio,Greigite,Iron sulfide mineral,Mackinawite,Microbial sulfate reduction,Pyrite},
  author = {Picard, Aude and Gartman, Amy and Clarke, David R. and Girguis, Peter R.},

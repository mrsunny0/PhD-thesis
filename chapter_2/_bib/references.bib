  doi = {10.1016/S0043-1354(03)00165-9},
  abstract = {Mildly acidic metal (Cu, Zn, Ni, Fe, Al and Mg), arsenic and sulfate contaminated waters were treated, over a 14 day period at 25\textdegree{}C, in a bench-scale upflow anaerobic packed bed reactor filled with silica sand and employing a mixed population of sulfate-reducing bacteria (SRB). The activity of SRB increased the water pH from {$\sim$}4.5 to 7.0, and enhanced the removal of sulfate and metals in comparison to controls not inoculated with SRB. Addition of organic substrate and sulfate at loading rates of 7.43 and 3.71 kg d-1 m-3, respectively, resulted in \&gt;82\% reduction in sulfate concentration. The reactor removed more than 97.5\% of the initial concentrations of Cu, Zn and Ni, while only \&gt;77.5\% and \&gt;82\% of As and Fe were removed, respectively. In contrast, Mg and Al levels remained unchanged during the whole treatment process. The removal patterns for Cu, Zn, Ni and Fe reflected the trend in their solubility for their respective metal sulfides, while As removal appeared to coincide with decreasing Cu, Zn, Ni and Fe concentrations, which suggests adsorption or concomitant precipitation with the other metal sulfides.},
  number = {14},
  journaltitle = {Water Research},
  shortjournal = {Water Research},
  urldate = {2017-03-30},
  date = {2003-08},
  pages = {3379-3389},
  keywords = {Sulfate reduction,Arsenic,Copper,Sulfate reducing bacteria,Metal precipitation,Anaerobic water treatment},
  author = {Jong, Tony and Parry, David L},
  file = {ScienceDirect Full Text PDF:C\:\\Users\\GeorgeSun\\Zotero\\storage\\EPQ233PH\\Jong and Parry - 2003 - Removal of sulfate and heavy metals by sulfate red.pdf:application/pdf;ScienceDirect Snapshot:C\:\\Users\\GeorgeSun\\Zotero\\storage\\RHV6AV4M\\S0043135403001659.html:text/html}
}

